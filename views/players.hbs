  overflow: hidden;
  background-color: #333;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.player h3 {
  font-weight: bold;
  margin-top: 3px;
  color: #fff;
  font-size: 28px;
}

.player .player-number {
  font-size: 24px;
}



  .player img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }



