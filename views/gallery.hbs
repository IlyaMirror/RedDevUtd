  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function toggleImageSize(image) {
      const isEnlarged = image.classList.toggle('enlarged');
      if (isEnlarged) {
        document.body.style.overflow = 'hidden';

        // Create enlarged image container
        const enlargedContainer = document.createElement('div');
        enlargedContainer.classList.add('enlarged-image-container');

        // Create enlarged image wrapper
        const enlargedWrapper = document.createElement('div');
        enlargedWrapper.classList.add('enlarged-image-wrapper');

        // Create enlarged image
        const enlargedImage = document.createElement('img');
        enlargedImage.src = image.src;
        enlargedImage.alt = image.alt;
        enlargedImage.classList.add('enlarged-image');
        enlargedImage.addEventListener('click', closeEnlargedImage); // Close the enlarged image on click

        // Append elements to the document
        enlargedWrapper.appendChild(enlargedImage);
        enlargedContainer.appendChild(enlargedWrapper);
        document.body.appendChild(enlargedContainer);

        // Add keyboard event listener for arrow keys
        document.addEventListener('keydown', handleKeyPress);
      } else {
        document.body.style.overflow = 'auto';
        const enlargedContainer = document.querySelector('.enlarged-image-container');
        if (enlargedContainer) {
          enlargedContainer.remove();
        }
        // Remove keyboard event listener for arrow keys
        document.removeEventListener('keydown', handleKeyPress);
      }
    }

    function closeEnlargedImage() {
      const enlargedContainer = document.querySelector('.enlarged-image-container');
      if (enlargedContainer) {
        enlargedContainer.remove();
      }
      document.body.style.overflow = 'auto';
      // Remove keyboard event listener for arrow keys
      document.removeEventListener('keydown', handleKeyPress);
    }

    function handleKeyPress(event) {
      // Ignore arrow key events
    }
  </script>
